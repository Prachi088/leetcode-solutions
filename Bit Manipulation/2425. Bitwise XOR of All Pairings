class Solution {
    public int xorAllNums(int[] nums1, int[] nums2) {
        int xor1 = 0, xor2 = 0;

        for (int x : nums1) xor1 ^= x;
        for (int x : nums2) xor2 ^= x;

        int ans = 0;

        if (nums2.length % 2 == 1) ans ^= xor1;
        if (nums1.length % 2 == 1) ans ^= xor2;

        return ans;
    }
}
